<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aubbsapps.funnyfacts.MainMenuActivity"
    android:background="#51b46d">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ANIAMAL"
        android:id="@+id/Aniamal_button"
        android:textColor="#51b46d"
        android:background="@android:color/white"
        android:layout_above="@+id/Sportsbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SPORTS"
        android:id="@+id/Sportsbutton"
        android:background="#ffffff"
        android:layout_above="@+id/Moviebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:textColor="#51b46d" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MOVIES"
        android:id="@+id/Moviebutton"
        android:layout_above="@+id/Randombutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_marginBottom="11dp"
        android:textColor="#51b46d" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RANDOM"
        android:id="@+id/Randombutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:textColor="#51b46d" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FunFacts"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#a2ffffff"
        android:textSize="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="46dp"
        android:src="@drawable/icon_logo"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
